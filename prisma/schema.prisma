// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Log {
  id        Int      @id @default(autoincrement())
  level     String   @default("info")
  log       String
  User      User?    @relation(fields: [userId], references: [id])
  userId    Int?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model User {
  id        Int       @id @default(autoincrement())
  firstName String?
  lastName  String?
  email     String?   @unique
  mobile    String?   @unique
  password  String?
  role      Role      @default(USER)
  qrcode    String?   @unique
  enableOtp Boolean?  @default(true)
  Mda       Mda?      @relation(fields: [mdaId], references: [id])
  mdaId     Int?
  logs      Log[]
  lastLogin DateTime? @default(now())
  lastSeen  DateTime? @default(now())
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Mda {
  id               Int      @id @default(autoincrement())
  name             String   @unique
  mdaCode          String   @unique
  registered       Boolean  @default(false)
  MdaType          MdaType  @default(DEPARTMENT)
  personalTotal    Float    @default(0)
  overheadTotal    Float    @default(0)
  capitalTotal     Float    @default(0)
  recurrentTotal   Float    @default(0)
  expenditureTotal Float    @default(0)
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  User             User[]
}

model RolePermissions {
  Role Role    @id @unique
  c    Boolean @default(false)
  r    Boolean @default(false)
  u    Boolean @default(false)
  d    Boolean @default(false)
}

enum Role {
  USER
  ADMIN
  SUPERADMIN
  DEVELOPER
}

enum MdaType {
  MINISTRY
  DEPARTMENT
  AGENCY
}

model Module {
  id          Int      @id @default(autoincrement())
  name        String   @unique
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Document {
  id          Int      @id @default(autoincrement())
  name        String   @unique
  storageName String   @unique
  mimeType    String?
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
